@model IEnumerable<CourseManagement.Models.StudentAttendanceViewModel>

@{
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    ViewData["Title"] = "Quản lý học viên";
    var sessions = ViewBag.AttendanceSessions as List<CourseManagement.Models.AttendanceSession> ?? new List<CourseManagement.Models.AttendanceSession>();
}

<!-- Page Header -->
<div class="dashboard-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">
            <i class="bi bi-people-fill me-2"></i>Quản lý học viên
        </h1>
        <div>
            <span class="badge bg-primary fs-6">
                <i class="bi bi-person-check-fill me-1"></i>
                Tổng: @Model.Count() học viên
            </span>
        </div>
    </div>

    <p class="text-muted mb-0">
        <i class="bi bi-info-circle me-1"></i>
        Danh sách tất cả học viên đã ghi danh vào các lớp học của bạn
    </p>
</div>

<!-- Students List -->
@if (Model.Any())
{
    <div class="dashboard-card">
        <!-- Students Table -->
        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="studentsTable">
                <thead class="table-light">
                    <tr>
                        <th rowspan="2" class="align-middle text-center" style="width: 50px;">
                            <i class="bi bi-hash"></i>
                        </th>
                        <th rowspan="2" class="align-middle" style="min-width: 200px;">
                            <i class="bi bi-person-fill me-1"></i>Họ tên
                        </th>
                        <th rowspan="2" class="align-middle" style="min-width: 200px;">
                            <i class="bi bi-envelope-fill me-1"></i>Email
                        </th>
                        @if (sessions.Any())
                        {
                            <th colspan="@sessions.Count" class="text-center bg-success bg-opacity-10">
                                <i class="bi bi-calendar-check me-1"></i>Điểm danh
                            </th>
                        }
                    </tr>
                    @if (sessions.Any())
                    {
                        <tr>
                            @foreach (var session in sessions)
                            {
                                <th class="text-center" style="min-width: 80px;">
                                    <small>
                                        @session.CreatedAt.ToString("dd/MM")
                                        <br>
                                        <span class="text-muted">@session.CreatedAt.ToString("HH:mm")</span>
                                    </small>
                                </th>
                            }
                        </tr>
                    }
                </thead>
                <tbody>
                    @{
                        int index = 1;
                        foreach (var student in Model)
                        {
                            <tr>
                                <td class="text-center text-muted">@index</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            @student.StudentName.Substring(0, 1).ToUpper()
                                        </div>
                                        <strong>@student.StudentName</strong>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@student.Email" class="text-decoration-none">
                                        <i class="bi bi-envelope me-1"></i>@student.Email
                                    </a>
                                </td>
                                @foreach (var session in sessions)
                                {
                                    var status = student.AttendanceStatuses.FirstOrDefault(s => s.SessionId == session.Id);
                                    <td class="text-center">
                                        @if (status != null && status.IsPresent)
                                        {
                                            <i class="bi bi-check-circle-fill text-success fs-4" 
                                               title="Có mặt lúc @status.AttendedAt?.ToString("HH:mm")"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-x-circle-fill text-danger fs-4" title="Vắng"></i>
                                        }
                                    </td>
                                }
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Statistics -->
        @if (sessions.Any())
        {
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center border-success">
                        <div class="card-body">
                            <i class="bi bi-calendar-check text-success" style="font-size: 2rem;"></i>
                            <h4 class="mt-2">@sessions.Count</h4>
                            <p class="text-muted mb-0">Tổng buổi điểm danh</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center border-primary">
                        <div class="card-body">
                            <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
                            <h4 class="mt-2">@Model.Count()</h4>
                            <p class="text-muted mb-0">Tổng học viên</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center border-info">
                        <div class="card-body">
                            <i class="bi bi-percent text-info" style="font-size: 2rem;"></i>
                            <h4 class="mt-2">
                                @{
                                    var totalRecords = Model.Sum(s => s.AttendanceStatuses.Count);
                                    var presentRecords = Model.Sum(s => s.AttendanceStatuses.Count(a => a.IsPresent));
                                    var avgAttendance = totalRecords > 0 ? (presentRecords * 100.0 / totalRecords) : 0;
                                }
                                @avgAttendance.ToString("F1")%
                            </h4>
                            <p class="text-muted mb-0">Tỷ lệ có mặt TB</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="dashboard-card text-center py-5">
        <i class="bi bi-people" style="font-size: 4rem; color: #dee2e6;"></i>
        <h4 class="mt-3 text-muted">Chưa có học viên nào</h4>
        <p class="text-muted">Học viên sẽ xuất hiện ở đây khi họ ghi danh vào lớp học của bạn</p>
    </div>
}

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .table tbody tr {
        transition: all 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table th {
        position: sticky;
        top: 0;
        background-color: #f8f9fa;
        z-index: 10;
    }

    .table-responsive {
        max-height: 600px;
        overflow-y: auto;
    }
</style>
