@model CourseManagement.Models.Assignment

<div class="content-block mb-3 assignment-block" data-assignment-id="@Model.Id">
    <div class="content-display p-3 border rounded">
        <h5><a href="@Url.Action("Details", "Assignments", new { id = Model.Id })">@Model.Title</a></h5>
    </div>
    <div class="text-end mt-1" style="display:none;" data-controls="true">
        @if ((ViewBag.CanEdit ?? false) || User.IsInRole("Instructor") || User.IsInRole("Admin"))
        {
            <a class="btn btn-sm btn-secondary" href="@Url.Action("Details", "Assignments", new { id = Model.Id })">Chỉnh
                sửa</a>
        }
    </div>
</div>