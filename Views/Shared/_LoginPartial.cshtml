@using Microsoft.AspNetCore.Identity
@using CourseManagement.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);
    var displayName = currentUser?.FullName ?? User.Identity?.Name;
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="form-inline">
        @Html.AntiForgeryToken()
        <ul class="navbar-nav">
            <li class="nav-item">
                <span class="nav-link">@displayName</span>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link btn btn-link" style="padding: 0;">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}