@model CourseManagement.Models.Assignment
@{
    var questions = ViewBag.Questions as List<CourseManagement.Models.Question> ?? new
    List<CourseManagement.Models.Question>();
    ViewData["Title"] = "Làm bài - " + Model.Title;

    // Kiểm tra deadline
    var isPastDeadline = Model.DueDate.HasValue && Model.DueDate.Value < DateTime.UtcNow;
    var currentUserId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

    // Kiểm tra đã nộp chưa
    var db = Context.RequestServices.GetService(typeof(CourseManagement.Data.ApplicationDbContext))
    as CourseManagement.Data.ApplicationDbContext;
    var hasSubmitted = db?.Submissions.Any(s => s.AssignmentId == Model.Id && s.StudentId == currentUserId) ?? false;
}

<div class="container mt-4">
    <h2>@Model.Title</h2>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="card mb-3">
            <div class="card-body">
                @Html.Raw(Model.Description)
            </div>
        </div>
    }

    @* Hiển thị deadline *@
    @if (Model.DueDate.HasValue)
    {
        <div class="alert @(isPastDeadline ? "alert-danger" : "alert-warning") mb-3">
            <i class="bi bi-clock"></i>
            <strong>Hạn nộp bài:</strong>
            @Model.DueDate.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
            @if (isPastDeadline)
            {
                <span class="badge bg-danger ms-2">ĐÃ QUÁ HẠN</span>
            }
            else
            {
                var timeLeft = Model.DueDate.Value - DateTime.UtcNow;
                if (timeLeft.TotalHours < 24)
                {
                    <span class="badge bg-warning text-dark ms-2">
                        Còn @((int)timeLeft.TotalHours) giờ @timeLeft.Minutes phút
                    </span>
                }
            }
        </div>
    }

    @* Thông báo nếu đã nộp *@
    @if (hasSubmitted)
    {
        <div class="alert alert-success mb-3">
            <i class="bi bi-check-circle-fill"></i> Bạn đã nộp bài tập này.
            <a asp-controller="Submissions" asp-action="Index" asp-route-assignmentId="@Model.Id"
                class="btn btn-sm btn-outline-success ms-2">
                Xem bài nộp
            </a>
        </div>
    }

    @* Hiển thị form nếu chưa quá hạn HOẶC chưa có deadline *@
    @if (!isPastDeadline && !hasSubmitted)
    {
        @* Kiểm tra nếu có câu hỏi thì dùng SubmitQuiz, không có thì dùng SubmitExam *@
        @if (questions.Any())
        {
            <form method="post" asp-action="SubmitQuiz" asp-controller="Assignments">
                @Html.AntiForgeryToken()
                <input type="hidden" name="assignmentId" value="@Model.Id" />

                <div class="alert alert-info mb-3">
                    <i class="bi bi-info-circle"></i>
                    <strong>Tổng số câu hỏi:</strong> @questions.Count câu
                </div>

                @for (int idx = 0; idx < questions.Count; idx++)
                {
                    var q = questions[idx];
                    var questionNumber = idx + 1;

                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <strong>Câu @questionNumber:</strong> @q.Content
                        </div>
                        <div class="card-body">
                            @{
                                var opts = q.Options;
                                for (int i = 0; i < opts.Count; i++)
                                {
                                    var inputName = "answer_" + q.Id;
                                    var optionLabel = ((char)('A' + i)).ToString();
                                    var optionValue = opts[i]; // Gửi giá trị đáp án thực tế, không phải chỉ số

                                    if (q.AllowMultiple)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="@inputName" id="@($"{inputName}_{i}")"
                                                value="@optionValue" />
                                            <label class="form-check-label" for="@($"{inputName}_{i}")">
                                                @optionLabel.) @opts[i]
                                            </label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="@inputName" id="@($"{inputName}_{i}")"
                                                value="@optionValue" />
                                            <label class="form-check-label" for="@($"{inputName}_{i}")">
                                                @optionLabel.) @opts[i]
                                            </label>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                }

                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" type="submit">
                        <i class="bi bi-send-fill"></i> Nộp bài
                    </button>
                </div>
            </form>
        }
        else
        {
            @* Bài tập tự luận - upload file *@
            <form method="post" asp-action="SubmitExam" asp-controller="Assignments" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="assignmentId" value="@Model.Id" />

                <div class="alert alert-info">
                    <strong>Bài tập tự luận:</strong> Vui lòng tải lên file bài làm của bạn.
                </div>
                <div class="mb-3">
                    <label for="submissionFile" class="form-label">Tải lên file nộp bài</label>
                    <input type="file" name="submissionFile" id="submissionFile" class="form-control" required />
                    <small class="text-muted">Định dạng được hỗ trợ: .pdf, .docx, .doc, .zip, .rar, .txt (tối đa 20 MB)</small>
                </div>
                <div class="mb-3">
                    <label for="studentNote" class="form-label">Ghi chú (tùy chọn)</label>
                    <textarea name="studentNote" id="studentNote" class="form-control" rows="3"
                placeholder="Nhập ghi chú của bạn..."></textarea>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" type="submit">
                        <i class="bi bi-send-fill"></i> Nộp bài
                    </button>
                </div>
            </form>
        }
    }
    else if (isPastDeadline)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Đã hết hạn nộp bài!</strong> Bài tập này đã quá thời gian cho phép nộp.
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Assignments" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>