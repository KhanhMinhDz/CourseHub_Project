@model IEnumerable<CourseManagement.Models.Submission>

@{
    ViewData["Title"] = "Danh sách bài nộp";
    var isInstructor = ViewBag.IsInstructor as bool? ?? false;
    var assignmentTitle = ViewBag.AssignmentTitle as string ?? "Bài tập";
}

<div class="container mt-4">
    <h2>Danh sách bài nộp - @assignmentTitle</h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            @if (isInstructor)
            {
                <p>Chưa có sinh viên nào nộp bài.</p>
            }
            else
            {
                <p>Bạn chưa nộp bài tập này.</p>
            }
        </div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        @if (isInstructor)
                        {
                            <th>Sinh viên</th>
                        }
                        <th>Thời gian nộp</th>
                        <th>File</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var s in Model)
                    {
                        <tr>
                            @if (isInstructor)
                            {
                                <td>@s.StudentId</td>
                            }
                            <td>@s.SubmittedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if(!string.IsNullOrEmpty(s.FilePath))
                                { 
                                    <a href="~/@s.FilePath" target="_blank" class="btn btn-sm btn-primary">
                                        <i class="bi bi-download"></i> Tải xuống
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Không có file</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(s.Comments))
                                {
                                    <div>@Html.Raw(s.Comments)</div>
                                }
                                else
                                {
                                    <span class="text-muted">Không có ghi chú</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    
    <div class="mt-3">
        <a asp-controller="Assignments" asp-action="Details" asp-route-id="@ViewBag.AssignmentId" class="btn btn-secondary">
            Quay lại bài tập
        </a>
    </div>
</div>
