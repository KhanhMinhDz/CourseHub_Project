@{
    ViewData["Title"] = "Nộp bài";
}

<div class="container mt-4">
    <h2>Nộp bài tập</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Create" asp-controller="Submissions" method="post" enctype="multipart/form-data" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="assignmentId" value="@ViewBag.AssignmentId" />

        <div class="mb-3">
            <label class="form-label">File nộp bài</label>
            <input type="file" name="file" class="form-control" />
            <div class="form-text">Chọn file bài làm của bạn (hình ảnh, PDF, Word, v.v.)</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Ghi chú (tuỳ chọn)</label>
            <textarea name="comments" class="form-control" rows="5"
                placeholder="Nhập ghi chú của bạn...">Test submission without file</textarea>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary" id="submitBtn">
                <i class="bi bi-send"></i> Nộp bài
            </button>
            <a asp-controller="Assignments" asp-action="Details" asp-route-id="@ViewBag.AssignmentId"
                class="btn btn-secondary">
                Hủy
            </a>
        </div>
    </form>
</div>